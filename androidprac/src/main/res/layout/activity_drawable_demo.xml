<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.onfengma.androidprac.DrawableDemoActivity">

    <TextView
        android:text="bitmap"
        android:id="@+id/bitmap"
        android:layout_height="50dip"
        android:background="@drawable/bitmap_demo"
        android:layout_width="match_parent" />

    <TextView
        android:text="shape"
        android:id="@+id/shape"
        android:layout_height="50dip"
        android:background="@drawable/shape_demo"
        android:layout_width="match_parent" />

    <TextView
        android:text="layer"
        android:id="@+id/layer"
        android:layout_height="50dip"
        android:background="@drawable/layer_drawable_demo"
        android:layout_width="match_parent" />

    <TextView
        android:text="state"
        android:id="@+id/state"
        android:clickable="true"
        android:layout_height="50dip"
        android:background="@drawable/state_drawable_demo"
        android:layout_width="match_parent" />

    <TextView
        android:text="levelList"
        android:id="@+id/levelList"
        android:layout_height="50dip"
        android:background="@drawable/level_drawable_demo"
        android:layout_width="match_parent" />

    <TextView
        android:text="transition"
        android:id="@+id/transition"
        android:layout_height="50dip"
        android:background="@drawable/transition_demo"
        android:layout_width="match_parent" />

    <TextView
        android:text="scale"
        android:id="@+id/scale"
        android:layout_height="50dip"
        android:background="@drawable/scale_demo"
        android:layout_width="match_parent" />

    <TextView
        android:text="inset"
        android:id="@+id/inset"
        android:layout_height="50dip"
        android:background="@drawable/inset_drawable_demo"
        android:layout_width="match_parent" />

    <TextView
        android:text="clip"
        android:id="@+id/clip"
        android:layout_height="50dip"
        android:background="@drawable/clip_demo_drawable"
        android:layout_width="match_parent" />
</LinearLayout>
